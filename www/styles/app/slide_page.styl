@import 'nib'

.slide-page
  height: 100%

  & > .text-container
    margin-top: 10px

    & .desc
      width: 550px
      margin: 0 auto

      & > p, & > h3
        font-weight: normal
        font-family: Arial, Verdana sans-serif
        text-align: left
        font-size: 18px
        line-height: 24px
        letter-spacing: 0

      & > h3
        margin: 24px auto
        text-align: center

    & > h1
      border-bottom: 2px dashed #bbb

  &.visuallyhidden > .screen-container
    border-width: 0!important
    border-image: none!important

    &:after
      content: ""
      display: none

.screen-container
  position: relative
  margin: 0 auto
  border: 0 solid
  user-select: none
  -webkit-touch-callout: none

  &:after
    pointer-events: none

  & .media
    pointer-events: none

  &.iphone
    &:after
      content: ""
      absolute: top left
      width: 100%
      height: 100%

    &.portrait
      // border-width: 133px 28px 131px 32px
      border-width: 100px 21px 97px 24px // reduced to 75%
      border-image: url('../images/app/iphone-frame-portrait.png') 100 21 97 24 stretch

      &:after
        background-image: url('../images/app/iphone-glare-portrait.png')

    &.landscape
      // border-width: 28px 131px 32px 133px
      border-width: 21px 97px 24px 100px // reduced to 75%
      border-image: url('../images/app/iphone-frame-landscape.png') 21 97 24 100 stretch

      &:after
        background-image: url('../images/app/iphone-glare-landscape.png')

.prompt-container
  width: 100%
  text-align: center
  font-size: 36px
  margin-top: 10px

  & > p
    display: none
    -webkit-margin-before: 0
    -webkit-margin-after: 0
