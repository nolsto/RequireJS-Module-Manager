@import 'nib'

#navigation
  position: fixed
  top: 10px
  margin-top: 7px
  padding: 0 20px 0 40px
  background-color: white
  border-bottom: 2px solid #ddd

  & > h1
    font-size: 30px

  & > h2
    color: #aaa
    font-weight: normal
    font-size: 18px
    padding: 0
    margin: 0

  & > ul
    margin-top: 0
    margin-bottom: 10px
    padding-left: 0
    line-height: 26px

  & a.menu
    absolute: top left 100%
    height: 15px
    line-height: 15px
    padding: 14px 7px
    background-color: white
    border: 2px solid #ddd
    border-left: none
    border-top: none
    border-top-right-radius: 4px
    border-bottom-right-radius: 4px

    & span
      display: inline-block
      float: left
      width: 18px
      height: 15px
      background: url('../images/app/menu-icon.gif') no-repeat top left

    &:hover
      background-color: #666
      border-color: black

      & span
        background: url('../images/app/menu-icon.gif') no-repeat top right

    &:active
      background-color: black
      border-color: black

    &.active span
      height: 18px
      background: url('../images/app/menu-icon.gif') no-repeat bottom left

    &.active:hover span
      background: url('../images/app/menu-icon.gif') no-repeat bottom right

.menu-item
  list-style-type: decimal
  border-top: 1px solid #ddd

  & > a
    font-size: 22px
    padding-right: 5px

  &:last-child
    border-bottom: 1px solid #ddd

  &:hover
    background-color: #ddd

    & > a:hover
      color: black

.item-home
  list-style-type: none

.current
  background-color: #666

  & > a
    color: white
    padding-right: 0
    padding-left: 5px
